<!--pages/billingManagement/rawMaterialProcessingOrder/rawMaterialProcessingOrderDetail.wxml-->
<view id="rawMaterialProcessingOrderDetail">
	<nav-content>
		<view slot="after">
			<view>原料加工单详情</view>
		</view>
	</nav-content>

	<!-- 基础信息 -->
	<view class="card fz28 por">
		<view class="title">基础信息</view>
		<view class="flex mt10">
			<view class="w30 color6">加工单号</view>
			<view class="w70">{{info.code}}</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">创建信息</view>
			<view class="w70">
				<view>{{info.created_at}}</view>
				<view class="mt10">{{info.user_name || '无'}},{{info.user_phone}}</view>
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">计划单号</view>
			<view class="w70">
				{{info.plan_code || '无'}}
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">下单日期</view>
			<view class="w70">
				{{info.created_at}}
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">交货日期</view>
			<view class="w70">
				{{info.delivery_time}}
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">加工单位</view>
			<view class="w70">
				{{info.client_name}}
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">联系电话</view>
			<view class="w70">
				{{info.contacts_phone}}
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">加工总数</view>
			<view class="w70">
				{{info.total_number || '无'}}
			</view>
		</view>
		<view class="flex mt10">
			<view class="w30 color6">加工总金额</view>
			<view class="w70">
				{{info.total_price || '无'}}
			</view>
		</view>
		<van-image wx:if="{{info.is_check !== 4 && info.is_check !== 3}}" style="position: absolute;right:0;top:0%"
			width="130" height="94" src="{{statusImageList[info.is_check]}}" />
		<view wx:else class="colorRed bold" style="position: absolute;right:5%;top:5%">单据异常</view>
	</view>

	<!-- 原料信息 -->
	<view class="card fz28">
		<view class="title">原料信息</view>
		<view wx:for="{{materialPlanInfo}}">
			<view class="flex mt10">
				<view class="w30 color6">原料名称</view>
				<view class="w70 color27A2">
					{{ item.material_name }}
				</view>
			</view>
			<view class="flex mt10">
				<view class="flex w50">
					<view class="w60 color6">合计值</view>
					<view class="w40">
						{{ item.total_number }}{{ item.childrenMergeInfo[0].unit }}
					</view>
				</view>
				<view class="flex w50">
					<view class="w60 color6">合计金额</view>
					<view class="w40">
						{{ item.total_price }}元
					</view>
				</view>
			</view>
			<view wx:for="{{item.childrenMergeInfo}}" wx:for-item='itemChild'>
				<view class="flex mt10">
					<view class="w30 color6">加工详情</view>
					<view class="w70 color27A2" wx:if="{{info.process==='染色'}}">
						白胚 → {{itemChild.after_color}}
					</view>
					<view class="w70 color27A2" wx:if="{{info.process==='倒纱'}}">
						{{itemChild.before_attribute}} → {{itemChild.after_attribute}}
					</view>
					<view class="w70 color27A2" wx:if="{{info.process==='并线'}}">
						{{itemChild.bingxian_desc}}
					</view>
					<view class="w70 color27A2" wx:if="{{info.process==='膨纱'}}">
						{{itemChild.pengsha_desc}}
					</view>
					<view class="w70 color27A2" wx:if="{{info.process==='切割'}}">
						{{itemChild.qiege_desc}}
					</view>
				</view>

				<view class="flex mt10">
					<view class="w50 flex">
						<view class="w60 color6">单价</view>
						<view class="w40">{{ itemChild.price }}元</view>
					</view>
					<view class="w50 flex">
						<view class="w60 color6">数量</view>
						<view class="w40">{{ itemChild.number }}{{ itemChild.unit }}</view>
					</view>
				</view>
			</view>
		</view>
	</view>

	<view class="mt20 submit" style="position: fixed;bottom:5%;left:50%;transform: translateX(-50%);">
		<view class="flex jcsa">
			<van-button style="margin-left: 20px;" type="primary" size="small" bindtap="openCheck">审核加工单</van-button>
		</view>
	</view>

	<view class="vh12"></view>

	<l-mask show="{{showShenHe}}" center>
		<view class='card' style="padding-bottom:0;max-height: 70vh;padding-top:0">
			<view class="flex pt10">
				<view class="bold w25">审核结果</view>
				<view class="w70">
					<l-radio-group placement="row" current="{{current}}" none-checked="{{false}}" bind:linchange="changeRadio">
						<l-radio key="{{1}}">通过</l-radio>
						<l-radio key="{{2}}" style="margin-left: 10px;">驳回</l-radio>
					</l-radio-group>
				</view>
			</view>
			<view class="line"></view>
			<view class="flex mt10" wx:if="{{current === 2}}">
				<view class="bold w25">驳回理由</view>
				<view class="w60">
					<l-textarea auto-height="{{true}}" l-class="noTopRightLeft" indicator="{{false}}" maxlength="80"
						bind:lininput="inputReason" />
				</view>
			</view>
			<view class="flex mt10">
				<view class="bold w25 pt10 pb10">备注信息</view>
				<view class="w60">
					<l-textarea auto-height="{{true}}" l-class="noTopRightLeft" indicator="{{false}}" maxlength="80"
						bind:lininput="inputDesc" />
				</view>
			</view>
			<view class="line" style="margin-bottom: 0;"></view>
			<view class="flex" style="margin-top: 0;">
				<view class="w50 tc h100 pt10 pb10" bindtap="closeCheck">关闭</view>
				<view class="w50 tc h100 pt10 pb10" style="border-left:1px solid #e7e7e7;" bindtap="confirmCheck">提交</view>
			</view>
		</view>
	</l-mask>

	<l-message content="{{content}}" />
</view>