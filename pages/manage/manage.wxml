<!--manage.wxml-->
<view class="container noPad">
	<nav-content showBack="{{false}}" showHome="{{false}}">
		<view slot="after">
			<view class="vw100 tc vh4">管理</view>
		</view>
	</nav-content>
	<view class="h100 bg">
		<view class="flex pr20 pl20 jcsb aic borderBox colorWhite w100 manage-list">
			<view class="flex userInfo" bindtap="bindViewTap">
				<view class="flex aic">
					<view style="width:100rpx;height:100rpx;border-radius: 500px;overflow: hidden;">
						<open-data class="logo" type="userAvatarUrl"></open-data>
					</view>
					<view class="ml20">{{userInfo.name + '(' + userInfo.station +')'}}</view>
				</view>
			</view>
		</view>

		<!-- 菜单 -->
		<view
			class="ml20 mr20 bgColorWhite vw90 flex jcsb flexWarp borderBox pl20 pr20 pt20 pb20 fz30 tc borderRadius16 shadow">
			<view class="flex jcsb w100">
				<view class="color9">手机号</view>
				<view>{{userInfo.user_name}}</view>
			</view>
			<view class="line"></view>
			<view class="flex jcsb w100" bindtap="bindCompany">
				<view class="color9">绑定工厂</view>
				<view>{{userInfo.bind_wechat===1?userInfo.alias:"未绑定"}}
					<van-icon name="arrow" />
				</view>
			</view>
		</view>

		<view
			class="ml20 mr20 mt20 bgColorWhite vw90 flex jcsb flexWarp borderBox pl20 pr20 pt20 pb20 fz30 tc borderRadius16 shadow">
			<view class="flex jcsb w100" bindtap='toMyJurisdiction'>
				<view class="color9">我的权限</view>
				<view>共{{userInfo.quanxianLen}}项<van-icon name="arrow" /></view>
			</view>
			<view class="line"></view>
			<view class="flex jcsb w100" bindtap="bindCompany">
				<view class="color9">修改密码</view>
				<view>{{userInfo.bind_wechat===1?userInfo.alias:"未绑定"}}
					<van-icon name="arrow" />
				</view>
			</view>
		</view>
	</view>

	<van-dialog id="van-dialog" confirm-button-color="#27A2FD" />
	<l-message content="{{content}}" />
	<view class="pof bgColor27A2 colorWhite tc"
		style="right:10%;bottom:12%;width:30px;height: 30px; line-height:32px;border-radius:200px;" bindtap="GetSandCode">
		<van-icon name="scan" size="18px" />
	</view>
</view>