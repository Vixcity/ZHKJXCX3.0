<!--pages/quotedPrice/quotedPriceDetail.wxml-->
<view id="quotedPriceDetail">
	<nav-content showHome="{{false}}">
		<view slot="after">
			报价单详情
		</view>
	</nav-content>
	<view class="card fz30">
		<view class="title">{{detailData.title}}</view>
		<view>报价单号：{{detailData.code}}</view>
		<view>询价公司：{{detailData.client.name}}{{detailData.contacts.name?('-'+detailData.contacts.name):''}}</view>
		<view>客户报价：
			<text wx:if="{{detailData.real_quote_price}}">
				<text class="color27A2">{{detailData.real_quote_price}}</text>{{detailData.settle_unit}}
			</text>
			<text wx:else>
				<text>无</text>
			</text>
		</view>
		<view>系统报价：
			<text wx:if="{{detailData.system_total_price}}">
				<text class="color27A2">{{detailData.system_total_price}}</text>{{detailData.settle_unit}}
			</text>
			<text wx:else>
				<text>无</text>
			</text>
		</view>
		<view>创建人：{{detailData.user.user_name || '无'}}</view>
		<view>更新时间：{{detailData.updated_at}}</view>
	</view>
	<view class="card fz30">
		<view class="title">产品信息：</view>
		<view class="flex jcsb" wx:for="{{detailData.product_data}}" wx:for-item="item" wx:for-index="index"
			wx:key="product-{{index}}">
			<view class="flex aic">
				<view class="bgColor27A2 pl10 pr10 pt5 pb5 colorWhite" style="border-radius: 500px;">{{index+1}}</view>
				<view class="ml10 flex">
					<van-image width="100" height="100" fit="cover"
						src="{{item.image || 'https://file.zwyknit.com/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_20220211103236.png'}}"
						bind:click='clickImage'
						data-img="{{item.image || 'https://file.zwyknit.com/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_20220211103236.png'}}" />
					<view class="flex fdc jcsa ml10">
						<view>{{item.category.name}}/{{item.secondary_category.name}}</view>
						<view class="color27A2">查看描述</view>
						<view>{{item.client_target_price}} 元</view>
					</view>
				</view>
			</view>
			<view class="flex fdc jcsa aie">
				<view wx:if="{{item.product_id>0}}">{{item.product_id}}</view>
				<view wx:else>A12093381</view>
				<view></view>
				<view>{{item.start_order_number}}件</view>
			</view>
		</view>
	</view>
	<view class="card fz30">
		<view class="title">报价信息</view>
		<l-tabs bind:linchange="changeTabs" animated>
			<l-tabpanel wx:for="{{detailData.product_data}}" wx:for-item="item" wx:for-index="index"
				wx:key="product2-{{index}}" tab="产品 1" key="{{'one'+index}}" slot="{{'one'+index}}">
				<view class="sonMt10">
					<view wx:for="{{item.material_data}}" wx:for-item="itemMaterial" wx:for-index="indexMaterial"
						wx:key="material-{{indexMaterial}}">
						<view class="flex aic">
							<view class="bgColorOrange pl8 pr12 pt5 pb5 colorWhite" style="border-radius: 500px;width:13px;">原</view>
							<view class="ml20">{{itemMaterial.decorate.name}}</view>
						</view>
						<view class="mt10 flex jcsb">
							<view>{{itemMaterial.weight}}{{itemMaterial.unit}}</view>
							<view>{{itemMaterial.loss}}%</view>
							<view>单价：{{itemMaterial.price}}元</view>
							<view>总价：{{itemMaterial.total_price}}元</view>
						</view>
					</view>
					<view wx:for="{{item.assist_material_data}}" wx:for-item="itemDecorateMaterial" wx:for-index="indexMaterial"
						wx:key="material-{{indexMaterial}}">
						<view class="flex aic">
							<view class="bgColor03d0 pl8 pr12 pt5 pb5 colorWhite" style="border-radius: 500px;width:13px;">辅</view>
							<view class="ml20">{{itemDecorateMaterial.decorate.name}}</view>
						</view>
						<view class="mt10 flex jcsb">
							<view>{{itemDecorateMaterial.number}}{{itemDecorateMaterial.unit}}</view>
							<view>{{itemDecorateMaterial.loss}}%</view>
							<view>单价：{{itemDecorateMaterial.price}}元</view>
							<view>总价：{{itemDecorateMaterial.total_price}}元</view>
						</view>
					</view>
				</view>
				<view wx:for="{{item.weave_data}}" wx:for-item="itemWeave" wx:for-index="indexWeave"
					wx:key="itemWeave-{{indexWeave}}">
					<view class="flex aic jcsb mt10">
						<view class="flex aic">
							<view class="bgColor27A2 pl8 pr12 pt5 pb5 colorWhite" style="border-radius: 500px;width:13px;">织</view>
							<view class="ml20">{{itemWeave.name}}</view>
						</view>
						<view>总价：{{itemWeave.total_price}}元</view>
					</view>
					<view class="mt10">织造说明：{{itemWeave.desc || '无'}}</view>
				</view>
				<view wx:for="{{item.semi_product_data}}" wx:for-item="itemHalfProcess" wx:for-index="indexWeave"
					wx:key="itemHalfProcess-{{indexWeave}}">
					<view class="flex aic jcsb mt10">
						<view class="flex aic">
							<view class="bgColor27A2 pl8 pr12 pt5 pb5 colorWhite" style="border-radius: 500px;width:13px;">半</view>
							<view class="ml20">{{itemHalfProcess.name}}</view>
						</view>
						<view>总价：{{itemHalfProcess.total_price}}元</view>
					</view>
					<view class="mt10">织造说明：{{itemHalfProcess.desc || '无'}}</view>
				</view>
				<view class="flex jcsb fz35 mt10">
					<view>
						<text>合</text>
						合计产品费用
					</view>
					<view>
						<text class="color27A2">38000.00</text> 元
					</view>
				</view>
			</l-tabpanel>
		</l-tabs>
	</view>
	<view class="card fz35">
		<view class="title">订单费用</view>
		<view wx:for="{{4}}">
			<view>织</view>
			<view class="flex jcsb">
				<view>针织织造</view>
				<view>38000.00 元</view>
			</view>
			<view>15%</view>
		</view>
		<view class="flex jcsb">
			<view>
				<text>合</text>
				合计产品费用
			</view>
			<view>
				<text class="color27A2">38000.00</text> 元
			</view>
		</view>
	</view>
	<view class="card">
		<view class="flex jcsb fz35" style="margin-top: 0;">
			<view>报价总额</view>
			<view class="flex">
				<view class="color27A2 mr5">￥38000.00</view>
				<view class="color27A2 pl5" style="border-left: 1px solid #e7e7e7;">$38000.00</view>
			</view>
		</view>
	</view>
	<view class="vh12"></view>
	<view wx:if="{{!isLogin}}">
		<view class="mt20 submit">
			<van-button type="primary" size="small" bindtap="toLogin">登录</van-button>
		</view>
	</view>
	<view wx:if="{{isLogin}}">
		<view class="mt20 submit" style="position: fixed;bottom:5%;left:50%;transform: translateX(-50%);">
			<view class="flex jcsa">
				<van-button type="primary" size="small">修改报价</van-button>
				<van-button style="margin-left: 20px;" type="primary" size="small">审核报价</van-button>
			</view>
		</view>
	</view>
	<l-mask show="{{showShenHe}}" center>
		<view class='card' style="padding-bottom:0;max-height: 70vh;padding-top:0">
			<view class="flex">
				<view class="bold w30">审核结果</view>
				<view class="w70">
					<l-radio-group placement="row" current="1" none-checked="{{false}}">
						<l-radio key="1">通过</l-radio>
						<l-radio key="2" style="margin-left: 10px;">驳回</l-radio>
					</l-radio-group>
				</view>
			</view>
			<view class="flex">
				<view class="bold w30">驳回理由</view>
				<van-checkbox-group value="{{ result }}" bind:change="checkBoxChange">
					<van-checkbox icon-size="17" class="fz35" wx:for-items="{{reasonList}}" wx:key="{{item.value}}"
						name="{{item.value}}">{{item.value}}</van-checkbox>
				</van-checkbox-group>
			</view>
			<view class="flex">
				<view class="bold w30 pt10 pb10">备注信息</view>
				<view class="fz60 w60">
					<l-textarea auto-height="{{true}}" maxlength="80" />
				</view>
			</view>
			<view class="line" style="margin-bottom: 0;"></view>
			<view class="flex" style="margin-top: 0;">
				<view class="w50 tc h100 pt10 pb10">关闭</view>
				<view class="w50 tc h100 pt10 pb10" style="border-left:1px solid #e7e7e7;">提交</view>
			</view>
		</view>
	</l-mask>
	<van-dialog id="van-dialog" confirm-button-color="#27A2FD" />
	<l-message content="{{content}}" />
	<!-- 弹出框 -->
	<van-popup catchtap show="{{showPopup}}" bindtap="closePopup">
		<view class="overfh por">
			<view class="tc vw100 h100">
				<image mode="widthFix" show-menu-by-longpress="{{true}}" src="{{clickImg}}" style="display:block">
				</image>
			</view>
		</view>
	</van-popup>
</view>