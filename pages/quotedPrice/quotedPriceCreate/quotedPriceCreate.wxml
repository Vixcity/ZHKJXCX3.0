<!--pages/quotedPrice/quotedPriceCreate.wxml-->
<view id="quotedPriceCreate">
	<nav-content showHome="{{false}}">
		<view slot="after">
			添加报价单
		</view>
	</nav-content>
	<view class="card">
		<l-input label="报价单标题" placeholder="点击输入" />
		<l-input label="询价公司/联系人" placeholder="点击选择" required="{{true}}" />
		<l-input label="负责小组/人" placeholder="点击选择" required="{{true}}" />
		<l-input label="币种/汇率" placeholder="点击输入" required="{{true}}" />
	</view>
	<view class="card">
		<view class="{{index===0?'':'mt10'}}" wx:for="{{4}}" wx:key="item" wx:for-index="index" wx:for-item="item">
			<view class="title flex jcsb">
				<view class="title">产品描述{{index+1}}</view>
				<view class="colorRed">删除该产品</view>
			</view>
			<view class="flex jcsb mb10 mt10">
				<view class="bgColorF5">
					<view>产品品类</view>
					<view>点击选择</view>
				</view>
				<view class="bgColorF5">
					<view>目标价格</view>
					<view>点击选择</view>
				</view>
				<view class="bgColorF5">
					<view>起订量</view>
					<view>点击输入</view>
				</view>
			</view>
			<l-textarea indicator="{{true}}" border="{{false}}" maxlength="200" auto-height="{{true}}"
				placeholder="点击输入产品描述信息" />
			<van-uploader file-list="{{fileList}}" bind:before-read="beforeRead" bind:after-read="afterRead" />
		</view>
		<view class="color27A2 tc mt10">新增产品描述</view>
	</view>
	<view class="card">
		<view class="title">报价信息</view>
		<view>
			<van-tabs animated swipeable lazy-render ellipsis="{{false}}" swipe-threshold="{{4}}">
				<van-tab wx:for="{{9}}" wx:key="item" wx:for-index="index" wx:for-item="item" title="产品 {{index+1}}"
					class="fz30">
					<view class="mt10" wx:for="{{5}}" wx:key="item" wx:for-index="index" wx:for-item="item">
						<view class="flex jcsb">
							<view class="flex fz25">
								<view>原 纱线/腈纶/36支单股腈纶</view>
								<view class="ml20 color27A2">点击变更</view>
							</view>
							<view class="flex">
								<view class="color27A2 pr5">添加</view>
								<view class="colorE800 pl5" style="border-left:1px solid #999999">删除</view>
							</view>
						</view>
						<view class="flex jcsb mb10">
							<view class="bgColorF5">
								<view>预计数量</view>
								<view>点击选择</view>
							</view>
							<view class="bgColorF5">
								<view>预计损耗</view>
								<view>点击选择</view>
							</view>
							<view class="bgColorF5">
								<view>单价</view>
								<view>点击输入</view>
							</view>
							<view class="bgColorF5">
								<view>起订量</view>
								<view>点击输入</view>
							</view>
						</view>
					</view>
					<view class="mt10" wx:for="{{3}}" wx:key="item" wx:for-index="index" wx:for-item="item">
						<view class="flex jcsb">
							<view class="flex fz25">
								<view>辅 纱线/腈纶/36支单股腈纶</view>
								<view class="ml20 color27A2">点击变更</view>
							</view>
							<view class="flex">
								<view class="color27A2 pr5">添加</view>
								<view class="colorE800 pl5" style="border-left:1px solid #999999">删除</view>
							</view>
						</view>
						<view class="flex jcsb mb10">
							<view class="bgColorF5">
								<view>预计数量</view>
								<view>点击选择</view>
							</view>
							<view class="bgColorF5">
								<view>预计损耗</view>
								<view>点击选择</view>
							</view>
							<view class="bgColorF5">
								<view>单价</view>
								<view>点击输入</view>
							</view>
							<view class="bgColorF5">
								<view>起订量</view>
								<view>点击输入</view>
							</view>
						</view>
					</view>
					<view class="mt10" wx:for="{{3}}" wx:key="item" wx:for-index="index" wx:for-item="item">
						<view class="flex jcsb">
							<view class="flex fz25">
								<view>织 纱线/腈纶/36支单股腈纶</view>
								<view class="ml20 color27A2">点击变更</view>
							</view>
							<view class="flex">
								<view class="color27A2 pr5">添加</view>
								<view class="colorE800 pl5" style="border-left:1px solid #999999">删除</view>
							</view>
						</view>
						<view class="flex jcsb mb10">
							<view class="bgColorF5 w60">
								<view>加工说明</view>
								<view>点击选择</view>
							</view>
							<view class="bgColorF5 w30">
								<view>小计</view>
								<view>点击输入</view>
							</view>
						</view>
					</view>
				</van-tab>
			</van-tabs>
		</view>
	</view>
	<view class="card">
		<view class="title">订单费用</view>
		<view class="flex jcsb mb10 flexWarp">
			<view class="bgColorF5 w45 mt10">
				<view>报价产品数量</view>
				<view>2 款</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>产品成本价合计</view>
				<view>30.00 元</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>客户佣金百分比</view>
				<view>12 %</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>佣金费用</view>
				<view>30.00 元</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>预计税率</view>
				<view>12 %</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>税费</view>
				<view>30.00 元</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>预计利润百分比</view>
				<view>12 %</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>利润</view>
				<view>30.00 元</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>备注与说明</view>
				<view>12 %</view>
			</view>
			<view class="bgColorF5 w45 mt10">
				<view>客户报价</view>
				<view>30.00 元</view>
			</view>
		</view>
	</view>
	<view class="vh12"></view>
	<view wx:if="{{isLogin}}">
		<view class="mt20 submit" style="position: fixed;bottom:5%;left:50%;transform: translateX(-50%);z-index:2">
			<view class="flex jcsa">
				<van-button type="primary" size="small">保存为草稿</van-button>
				<van-button style="margin-left: 20px;" type="primary" size="small">提交</van-button>
			</view>
		</view>
	</view>
</view>